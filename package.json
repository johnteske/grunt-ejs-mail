{
  "name": "gulp-ejs-mail",
  "version": "0.1.0",
  "description": "ejs-compiled HTML emails",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnteske/gulp-ejs-mail.git"
  },
  "bugs": {
    "url": "https://github.com/johnteske/gulp-ejs-mail/issues"
  },
  "scripts": {
    "git_func": "for dir in $(find . -name '.git'); do cd ${dir%/*}; echo -e '\\033[0;36m'$PWD'\\033[0m'; git $GIT_CMD; echo ''; cd - > /dev/null; done",
    "git_pull": "GIT_CMD='pull --ff-only' npm run git_func",
    "git_status": "GIT_CMD='status -s -b' npm run git_func",
    "update": "npm run git_pull; npm install"
  },
  "dependencies": {
    "del": "^2.2.1",
    "glob": "^7.0.5",
    "gulp": "^3.9.1",
    "gulp-ejs": "^2.1.2",
    "gulp-flatten": "^0.3.0",
    "gulp-inline-css": "^3.1.0",
    "gulp-sass": "^2.3.2",
    "gulp-util": "^3.0.7",
    "js-yaml": "^3.6.1"
  }
}
